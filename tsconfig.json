{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": false
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.story.tsx",
    "node_modules",
    "lib",
    "esm",
    "**/__tests__/**/*"
  ]
}
